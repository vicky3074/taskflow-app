# Environment variables for TaskFlow App
# Copy this file to .env and update values as needed

# Application
NODE_ENV=production
PORT=3000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=taskflow
DB_USER=taskflow_user
DB_PASSWORD=secure_password_123

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Secret (generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_here

# API Configuration
API_RATE_LIMIT=100
API_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=*

# Security
BCRYPT_ROUNDS=12

# Docker
COMPOSE_PROJECT_NAME=taskflow